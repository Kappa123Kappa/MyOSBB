                                        <br />
                                        @ViewBag.Idea[0].text
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (ViewBag.User.Id == ViewBag.SelectedOSBB.IdHead)
