                            </div>
                            <div class="content">
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-striped">
                                        <thead>
                                        <th>№</th>
                                        <th>Тема новини</th>
                                        @*<th>Опис</th>*@
                                        <th>Дата</th>
                                        <th>Автор</th>
                                        <th></th>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.News == null)
                                            {
                                                <tr>
                                                    <td colspan="6" style="text-align: center; font-family: 'Comfortaa', cursive; font-size: 20pt; color: #f5593d">Новини відсутні</td>
                                                </tr>
                                            }
                                            else
                                            {
                                                for (int i = 0; i < Enumerable.Count(ViewBag.News); i++)
                                                {
                                                    int count = i + 1;
                                                    <tr>
                                                        <td>@count</td>
                                                        <td>@ViewBag.News[i].Title</td>
                                                        @*<td>@ViewBag.News[i].Text</td>*@
