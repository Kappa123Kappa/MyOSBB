                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Останні ідеї</h4>
                                <p class="category">Ваше осбб</p>
                            </div>
                            <div class="content">
                                <div class="content table-responsive table-full-width">
                                    @if (ViewBag.IsAllRegistred == true)
                                    {
                                        if (Enumerable.Count(ViewBag.Ideas) > 0)
                                        {
                                            <table class="table table-striped">
                                                <thead>
                                                    <th>№</th>
                                                    <th>Тема ідеї</th>
                                                    <th>Підписів</th>
                                                    <th>Дата</th>
                                                    <th>Автор</th>
                                                    <th></th>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < Enumerable.Count(ViewBag.Ideas); i++)
                                                    {
                                                        int count = i + 1;
                                                        <tr>
                                                            <td>@count</td>
                                                            <td>@ViewBag.Ideas[i].title</td>
                                                            <td>
                                                                <div class="progress">
                                                                    <div class="progress-bar bg-info" style="width: calc(@ViewBag.Ideas[i].quantityOfVotes * 100% / @ViewBag.Voters)">
                                                                        @ViewBag.Ideas[i].quantityOfVotes/@ViewBag.Voters
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>@ViewBag.Ideas[i].date.ToString("dd. MM. yyyy")</td>
                                                            <td>@ViewBag.Ideas[i].author</td>

                                                            <td>
                                                                <button id="vote" class="btn btn-info  btnInTable" style="margin-bottom: 5px;"
                                                                        onclick="location.href='@Url.Action("Ideas", "Main", new { id = @ViewBag.SelectedOSBB.Id })'">
                                                                    Детальніше
                                                                </button>

                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <table class="table table-striped">
                                                <tr>
                                                    <td colspan="9" style="text-align: center; font-family: 'Comfortaa', cursive; font-size: 20pt; color: #f5593d">
                                                        Ідеї відсутні
                                                    </td>
                                                </tr>
                                            </table>
                                        }

                                    }
                                    else
                                    {
                                        <table class="table table-striped">
                                            <tr>
                                                <td colspan="9" style="text-align: center; font-family: 'Comfortaa', cursive; font-size: 20pt; color: #f5593d">
                                                    Ще не всі зареєструвались у вашому ОСББ або у вас не підключене ОСББ. Подавати ідеї на голосування не можна, поки усі не зареєструються!!!
                                                </td>
                                            </tr>
                                        </table>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
