@model MyOSBB.Models.ResetPassword
@{
	ViewData["Title"] = "Вхід";
}


<content>
	<div class="descriptionBackground">
		<div class="logo">
		</div>
		<div class="description">
			<p>Онлайн система управління ОСББ</p>
			<hr style="background-color: #58595b; size: 5px;" />
			<br />
			<br />
			<p>Для зміни паролю, перейдіть за посилання у по відомленні, яке пришло на вашу пошту</p>
			@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<div class="Login">
					
					<div class="row">
						<a href='@Url.Action("Login")' style="text-decoration:none">
							<button type="button" class="btn btn-info btn-block" style="width: 100%; font-family: 'Comfortaa', cursive;">
								Вхід
							</button>
						</a>
					</div>
				</div>
			}
		</div>
	</div>
</content>
<footer></footer>
</body>
