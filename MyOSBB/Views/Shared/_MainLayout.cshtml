<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Моє ОСББ</title>
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
